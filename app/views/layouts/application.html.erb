<!DOCTYPE html>
<html>
  <head>
    <title>BARKAway</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true%>
  </head>

  <body class="d-flex flex-column min-vh-100">
  <%# NAVBAR %>
  <nav class="navbar py-4">
    <div class="container-fluid">
      <div id="bark-away-link">
        <a><%= link_to root_path do %>
          <i class="fa-solid fa-paw"></i> Bark_Away
        </a>
          <% end %>
      </div>
      <form class="w-50 me-3" role="search">
        <input type="search" class="form-control rounded-pill" placeholder="Search..." aria-label="Search">
      </form>
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <%= link_to "Sign in", new_user_session_path, method: :get, class: "dropdown-item" %>
        <%# <li class="nav-item dropdown" style="margin: 0 30px;"> %>
           <%# <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", style: 'margin-right: 24px', id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %> %>
          <%# <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown"> %>
            <%= button_to "Log out", destroy_user_session_path, method: :delete %>
          <%# </div> %>
        <%# </li> %>
          <% else %>
        <li class="nav-item active d-black">
          <%= link_to "Sign in", new_user_session_path, class: "nav-link text-white", style: "padding: 20px;" %>
        </li>
          <% end %>
      </ul>
    </div>
  </nav>


<%# END NAVBAR %>

<%= yield %>

<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>

    <%# FOOTER %>

  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 mt-auto border-top">
    <div class="col-md-4 d-flex justify-content-center">
      <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
      </a>
      <span class="text-muted"><i class="fa-solid fa-paw"></i>BARK_AWAY</span>
    </div>

    <ul class="nav col-md-4 list-unstyled d-flex">
      <li class="ms-3"><a class="text-muted" href="#"><i class="fa-brands fa-twitter"></i></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><i class="fa-brands fa-facebook"></i></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><i class="fa-brands fa-instagram"></i></a></li>
    </ul>
  </footer>

    <%# END FOOTER %>

  </body>
</html>
