
<div class="container dog_walker">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="pt-5 pb-5"> Become a dog walker</h1>


      <div class="form-group d-flex gap-3 mb-3">
        <div class="email__form ">
          <label>Your name</label>
          <br><input style="width:200px" type="text" value="<%= current_user.full_name%>" disabled>
        </div>
        <div class="email__form ">
          <label>Email</label>
          <br><input style="width:250px" type="email" value="<%= current_user.email%>" disabled>
        </div>
      </div>

      <div class="form-group d-flex gap-3 mb-3">
        <div class="email__form ">
          <label>Where do you call home?</label>
          <br><input style="width:250px" type="text" value="<%= current_user.city%>" disabled>
        </div>
        <div class="email__form ">
          <label>Your paw friend breed is</label>
          <br><input style="width:250px" type="text" value="<%= current_user.dog_breed%>" disabled>
        </div>
      </div>

      <div class="form-group mb-3 email__form">
      <%= simple_form_for @dog_walker do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :price, label:'What is your expected price of walking a dog?' %>
        <%= f.input :description, label:'Tell us about your walks' %>
        <%= f.input :photo, label: "Upload a picture to show yourself!",as: :file %>
        <%= f.submit 'Become a dog walker!', class: 'btn btn-primary' %>
      <% end %>
    </div>
        <p class="p-0 text-secondary">  *Please check the following information carefully. If something's wrong, please <%= link_to "update your profile",edit_user_registration_path, class:"btn-light"  %>*</p>
    </div>
  </div>
</div>
